<!DOCTYPE html>

@model PairingTest.Web.Models.QuestionnaireViewModel
<html>
<head>
    <title>@Model.QuestionnaireTitle</title>
    @Styles.Render("~/Content/css")
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-center" style="height:50px;">
                <h3>@Model.QuestionnaireTitle</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <table class="table table-striped table-hover">
                    <tr>
                        <th class="col-sm-8">
                            Question:
                        </th>
                        <th class="col-sm-4">
                            Answer:
                        </th>
                    </tr>

                    @foreach (var item in Model.QuestionsText)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item)
                            </td>
                            <td>
                                <input type="radio" value="Paris" /> Paris<br />
                                <input type="radio" value="Havana" /> Havana<br />
                                <input type="radio" value="Berlin" /> Berlin<br />
                                <input type="radio" value="Warsaw" /> Warsaw<br />
                            </td>

                        </tr>
                    }

                </table>
            </div>
            <div class="col-sm-3">
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>

</html>
